rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the resource
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Teams collection - users can read/write teams they own or are members of
    match /teams/{teamId} {
      allow read, write: if isAuthenticated();
    }
    
    // Team members collection - users can read/write if they're team members
    match /teamMembers/{memberId} {
      allow read, write: if isAuthenticated();
    }
    
    // Projects collection - users can read/write if they're team members
    match /projects/{projectId} {
      allow read, write: if isAuthenticated();
    }
    
    // Tasks collection - users can read/write if they're team members
    match /tasks/{taskId} {
      allow read, write: if isAuthenticated();
    }
    
    // Team invitations collection - users can read/write if they're team members
    match /teamInvitations/{invitationId} {
      allow read, write: if isAuthenticated();
    }
    
    // Activity logs collection - users can read/write if they're team members
    match /activityLogs/{logId} {
      allow read, write: if isAuthenticated();
    }
    
    // Notes collection - users can only access their own notes
    match /notes/{noteId} {
      allow read, write: if isAuthenticated();
    }
    
    // Business ideas collection - users can only access their own ideas
    match /businessIdeas/{ideaId} {
      allow read, write: if isAuthenticated();
    }
    
    // Library resources collection - users can only access their own resources
    match /libraryResources/{resourceId} {
      allow read, write: if isAuthenticated();
    }
  }
}
